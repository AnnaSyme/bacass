/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run nf-core/bacass -profile test_long
 */

params {
  config_profile_name = 'Test profile for long and short read data'
  config_profile_description = 'Minimal test dataset to check pipeline function'
  // Limit resources so that this can run on Travis
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h
  skip_kraken2 = true
  // some extra args to speed tests up
  assembly_type='hybrid'
  prokka_args=" --fast"
  // Input data
  input = 'https://raw.githubusercontent.com/nf-core/test-datasets/bacass/bacass_hybrid.csv'
}